<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <TraderKindDef>
    <defName>Orbital_Empire</defName>
    <label>imperial trader</label>
    <commonality>1</commonality>
    <orbital>true</orbital>
    <faction>Empire</faction>
    <permitRequiredForTrading>TradeOrbital</permitRequiredForTrading>
    <stockGenerators>

    <!-- Resources -->
      <li Class="StockGenerator_SingleDef">
        <thingDef>Silver</thingDef>
        <countRange>5000~10000</countRange>
      </li>
      <li Class="StockGenerator_Category">
        <categoryDef>ResourcesRaw</categoryDef>
        <thingDefCountRange>1~2</thingDefCountRange>
      </li>
      <li Class="StockGenerator_SingleDef">
        <thingDef>ComponentIndustrial</thingDef>
        <countRange>10~20</countRange>
      </li>
      <li Class="StockGenerator_SingleDef">
        <thingDef>ComponentSpacer</thingDef>
        <countRange>20~30</countRange>
      </li>
      <li Class="StockGenerator_SingleDef">
        <thingDef>MedicineUltratech</thingDef>
        <countRange>60~100</countRange>
      </li>
      <li Class="StockGenerator_Tag">
        <tradeTag>MortarShell</tradeTag>
        <thingDefCountRange>1~2</thingDefCountRange>
        <countRange>40~80</countRange>
      </li>

      <!-- Drugs -->
      <li Class="StockGenerator_Category">
        <categoryDef>Drugs</categoryDef>
      </li>

      <!-- Techprints -->
      <li Class="StockGenerator_Techprints">
        <countChances>
          <li>
            <count>2</count>
            <chance>1</chance>
          </li>
        </countChances>
      </li>

      <!-- Weapons -->
      <li Class="StockGenerator_WeaponsRanged">
        <weaponTag>SpacerGun</weaponTag>
        <countRange>6~12</countRange>
      </li>
      <li Class="StockGenerator_Tag">
        <tradeTag>PsychicWeapon</tradeTag>
        <thingDefCountRange>2~4</thingDefCountRange>
      </li>
      <li Class="StockGenerator_WeaponsMelee">
        <weaponTag>UltratechMelee</weaponTag>
        <countRange>2~4</countRange>
      </li>
      <li Class="StockGenerator_WeaponsMelee">
        <weaponTag>Bladelink</weaponTag>
        <countRange>1~2</countRange>
      </li>

      <!-- Apparel -->
      <li Class="StockGenerator_Tag">
        <tradeTag>HiTechArmor</tradeTag>
        <thingDefCountRange>4~8</thingDefCountRange>
        <countRange>1~2</countRange>
      </li>
      <li Class="StockGenerator_Clothes">
        <apparelTag>Royal</apparelTag>
        <countRange>20~32</countRange>
      </li>
      <li Class="StockGenerator_Tag">
        <tradeTag>PsychicApparel</tradeTag>
        <thingDefCountRange>4~6</thingDefCountRange>
      </li>

      <!-- Implants -->
      <li Class="StockGenerator_Tag">
        <tradeTag>ImplantEmpireCommon</tradeTag>
        <thingDefCountRange>2~4</thingDefCountRange>
      </li>
      <li Class="StockGenerator_Tag">
        <tradeTag>ImplantEmpireRoyal</tradeTag>
        <thingDefCountRange>2~4</thingDefCountRange>
      </li>

      <!-- Buying -->
      <li Class="StockGenerator_BuyExpensiveSimple" />
      <li Class="StockGenerator_BuyTradeTag"><tag>Art</tag></li>

    </stockGenerators>
  </TraderKindDef>

</Defs>